    "@aws-sdk/client-ssm": "^3.936.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.0",
