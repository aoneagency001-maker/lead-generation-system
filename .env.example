# ===================================
# SUPABASE CONFIGURATION
# ===================================
# Получите эти данные на https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ===================================
# FASTAPI CONFIGURATION
# ===================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
API_SECRET_KEY=your-secret-key-change-this-in-production

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_URL=redis://localhost:6379/0

# ===================================
# N8N CONFIGURATION
# ===================================
N8N_URL=http://localhost:5678
N8N_API_KEY=

# ===================================
# TELEGRAM BOT
# ===================================
# Создайте бота через @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_NOTIFICATION_CHAT_ID=your-chat-id-for-notifications

# ===================================
# WHATSAPP (WAHA)
# ===================================
# Будет использоваться позже
WHATSAPP_API_URL=http://localhost:3001
WHATSAPP_API_KEY=

# ===================================
# PROXY CONFIGURATION
# ===================================
# Для парсинга OLX/Kaspi (опционально)
USE_PROXY=False
PROXY_TYPE=http
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
# Или список прокси (разделенных запятой)
PROXY_LIST=

# ===================================
# CAPTCHA SOLVING (2Captcha)
# ===================================
# Зарегистрируйтесь на https://2captcha.com
CAPTCHA_API_KEY=your-2captcha-api-key
CAPTCHA_ENABLED=False

# ===================================
# AI/LLM CONFIGURATION
# ===================================
# Для crewAI и анализа данных
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
# Или используйте локальную модель через Ollama
USE_LOCAL_LLM=False
OLLAMA_BASE_URL=http://localhost:11434

# ===================================
# OLX CREDENTIALS
# ===================================
# Аккаунты для автопостинга (добавляйте по мере необходимости)
OLX_EMAIL_1=your-email@example.com
OLX_PASSWORD_1=your-password
OLX_PHONE_1=+77001234567

# ===================================
# KASPI CREDENTIALS
# ===================================
KASPI_MERCHANT_ID=your-merchant-id
KASPI_API_KEY=your-kaspi-api-key

# ===================================
# APPLICATION SETTINGS
# ===================================
# Лимиты и настройки
MAX_ADS_PER_DAY=10
MAX_CONCURRENT_PARSERS=3
LEAD_QUALIFICATION_TIMEOUT=300

# Уведомления
ENABLE_NOTIFICATIONS=True
NOTIFICATION_CHANNELS=telegram,email

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

